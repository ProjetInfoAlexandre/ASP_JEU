<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" type="text/css" href="~/Content/Site.css">
    <title>@ViewBag.Title - Mon application ASP.NET</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <h1>ALBATARD</h1>

    <div class="navbar-collapse collapse navigation">
        <ul class="nav navbar-nav navigationUL">
            <li class="navigationCell">@Html.ActionLink("Accueil", "Accueil", "Home")</li>
            <li class="navigationCell">@Html.ActionLink("Vaisseaux", "Vaisseaux", "Home")</li>
            <li class="navigationCell">@Html.ActionLink("Bâtiments", "Batiments", "Home")</li>
            <li class="navigationCell">@Html.ActionLink("Wiki", "Wiki", "Home")</li>
        </ul>
    </div>

    <div class="container body-content partiePrincipale">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
